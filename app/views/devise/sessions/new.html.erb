<div class="ui segment">
  <h2>登陆系统</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div style="position: relative">
      <div class="ui one column middle aligned very relaxed stackable grid">
        <div class="column">
          <div class="ui form">
            <div class="field">
              <%= f.label :phone, '用户名' %>
              <div class="ui left icon input">
                <%= f.text_field :phone, { autofocus: true, placeholder: '请输入用户名' } %>
                <i class="user icon"></i>
              </div>
            </div>
            <div class="field">
              <%= f.label :password, '密码' %>
              <div class="ui left icon input">
                <%= f.password_field :password, { autocomplete: "off", placeholder: '请输入密码' } %>
                <i class="lock icon"></i>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <div class="ui checkbox">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, '记住我' %>
                </div>
              </div>
            <% end -%>
            <%= f.submit "Log in", { class: 'ui blue submit button' } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>



<%= render "devise/shared/links" %>
