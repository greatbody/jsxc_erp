<% content_for :title, "登录ERP" %>
<div class="ui middle aligned  center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="/logo.png" class="image">
      <div class="content">
        欢迎使用极速学车ERP系统
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>
    <% if flash[:alert] %>
    <div class="ui error message" style="display:block;">
      <%= flash[:alert] %>
    </div>
    <% end %>
    <div class="ui stacked segment">
      <div class="field">
        <div class="ui left icon input">
          <%= f.text_field :phone, { autofocus: true, placeholder: '请输入用户名/手机' } %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <%= f.password_field :password, { autocomplete: "off", placeholder: '请输入密码' } %>
          <i class="lock icon"></i>
        </div>
      </div>
      <button type="submmit" class="ui fluid large teal submit button">登录</button>
    </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
<style type="text/css">
  body > .grid {
    height: 100%;
  }

  .image {
    margin-top: -100px;
  }

  .column {
    max-width: 450px;
  }
</style>
