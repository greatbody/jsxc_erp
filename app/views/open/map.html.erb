<% content_for :title, "部分训练场分布图 - 极速学车" %>
<style type="text/css">
  html, body{
      width: 100%;
      height: 100%;
  }

  *{
    margin: 0px;
    padding: 0px;
  }

  body, button, input, select, textarea {
    font: 12px/16px Verdana, Helvetica, Arial, sans-serif;
  }

  p{
    width:603px;
    padding-top:3px;
    overflow:hidden;
  }

  .btn{
    width:142px;
  }
</style>
<div id="container"></div>
<script type="text/javascript">
  //异步加载地图库函数文件
  function loadScript() {
    //创建script标签
    var script = document.createElement("script");
    //设置标签的type属性
    script.type = "text/javascript";
    //设置标签的链接地址
    script.src = "http://map.qq.com/api/js?v=2.exp&callback=init";
    //添加标签到dom
    document.body.appendChild(script);
  }
  function init() {
    //设置地图中心点
    var myCenter = new qq.maps.LatLng(<%= "#{@average_latitude},#{@average_longitude}" %>);
    //定义工厂模式函数
    var myOptions = {
        zoom: 12, //设置地图缩放级别
        center: myCenter, //设置中心点样式
        mapTypeId: qq.maps.MapTypeId.ROADMAP //设置地图样式详情参见MapType
      }
      //获取dom元素添加地图信息
    var map = new qq.maps.Map(document.getElementById("container"), myOptions);
    var infoWin = new qq.maps.InfoWindow({
        map: map
    });
    $('#container').css('width', document.body.clientWidth);
    $('#container').css('height', document.body.clientHeight - 50);
<% @train_fields.each do |train_field| %>
  var marker = new qq.maps.Marker({
    //设置Marker的位置坐标
    position: new qq.maps.LatLng(<%= train_field.latitude %>, <%= train_field.longitude %>),
    //设置显示Marker的地图
    map: map
  });
  var scaleSize = new qq.maps.Size(12, 42),
      icon = new qq.maps.MarkerImage(
          "http://pic.qiantucdn.com/58pic/15/44/26/69s58PICd6F_1024.png",
          null,
          null,
          null,
          scaleSize
      );
  marker.setTitle("<%= train_field.name %>");
  marker.setIcon(icon);
<% end %>
  }
  window.onload = loadScript;
</script>
