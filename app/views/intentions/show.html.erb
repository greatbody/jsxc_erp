<% content_for :title, "[#{@intention.student.name}]的学车意向 - 极速学车ERP系统" %>
<div class="intention intention-detail">
  <div class="padding-container">
    <div class="ui raised text segment">
      <div class="ui three column middle aligned very relaxed stackable grid">
        <div class="column">
          姓名：<%= @student.name %>
        </div>
        <div class="column">
          性别：<%= t("sexs.#{@student.sex}") %>
        </div>
        <div class="column">
          年龄：未实现功能
        </div>
      </div>
      <div class="ui three column middle aligned very relaxed stackable grid">
        <div class="column">
          手机：<%= PhoneExt.format_phone(@student.phone) %>
        </div>
        <div class="column">
          身份证：<%= @student.id_card %>
        </div>
        <div class="column">
          联系地址：<%= @student.address %>
        </div>
      </div>
      <div class="ui three column middle aligned very relaxed stackable grid">
        <div class="column">
          单位：<%= @student.unit %>
        </div>
        <div class="column">
          对接人：<%= @intention.user.name %>
        </div>
        <div class="column">
          下次联系：<%= render partial: 'show_next_contact_date' %>
        </div>
      </div>
    </div>
    <div class="ui raised text segment">
      <%= link_to '新的跟踪', new_contact_log_path, class: 'ui primary button' %>
    </div>
    <div>
      <table class="ui celled table">
        <colgroup>
          <col style="width: 100px;" />
          <col style="width: 130px;" />
          <col style="width: 130px;" />
          <col style="width: 130px;" />
          <col />
        </colgroup>
        <thead>
          <tr>
            <th>日期</th>
            <th>处理人</th>
            <th>类型</th>
            <th>下次联系</th>
            <th>详情</th>
          </tr>
        </thead>
        <tbody>
          <% @contact_logs.each do |contact_log| %>
          <%
            created_at_date = contact_log.created_at.to_date
            next_contact_at = contact_log.next_contact_at
          %>
          <tr>
            <td>
              <%= created_at_date.to_s(:db) %>
            </td>
            <td>
              <%= contact_log.user.name %>
            </td>
            <td>
              <%= I18n.t("contact_types.#{contact_log.contact_type}") %>
            </td>
            <% if next_contact_at == 0 then %>
              <td>不需要</td>
            <% else %>
              <% if next_contact_at.nil? %>
              <td>-</td>
              <% else %>
              <td><%= next_contact_at.to_date.to_s(:db) %></td>
              <% end %>
            <% end %>
            <td>
              <i class="chevron down icon" style="border: solid 1px #ccc;width: 30px;height: 20px;cursor: pointer;float: right;"></i>
              <p style="white-space: nowrap;  overflow: hidden;  text-overflow: ellipsis;width: 500px">
              <%= contact_log.contact_log %>
              </p>
            </td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="5">
              <div class="ui right floated pagination menu">
                <a class="icon item">
                  <i class="left chevron icon"></i>
                </a>
                <a class="item">1</a>
                <a class="item">2</a>
                <a class="item">3</a>
                <a class="item">4</a>
                <a class="icon item">
                  <i class="right chevron icon"></i>
                </a>
              </div>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
