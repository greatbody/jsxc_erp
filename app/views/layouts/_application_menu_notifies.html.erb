<% if @notify[:total] <= 0 %>
<a class="item">
  <i class="mail icon"></i> 通知消息
</a>
<% else %>
<div class="ui simple dropdown item">
  <i class="mail icon"></i> 通知消息( <span style="color: red;margin:0 4px;"><%= @notify[:total] %></span>)
  <i class="dropdown icon"></i>
  <div class="menu">
    <% @notify.delete(:total) %>
    <% @notify.map do |key, value| %>
      <% if value > 0%>
      <a class="item intention-href" data-type="<%= key %>" href="/intentions?touch=<%= key %>">
        <i class="mail icon"></i>
        <span style="color: red;margin-right: 4px;"><%= value %></span>
        <%= t("application.menus.#{key}") %>
      </a>
      <% end %>
    <% end %>
  </div>
</div>
<% end %>
