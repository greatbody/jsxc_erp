<% content_for :title, "任务列表 - #{current_user.name}" %>
<header class="ui-header ui-header-positive ui-border-b">
  <i class="ui-icon-return" onclick="history.back()"></i>
  <h1>任务列表</h1>
  <%= link_to work_tasks_path do %>
    <button class="ui-btn">回首页</button>
  <% end %>
</header>
<footer class="ui-footer ui-footer-btn">
  <ul class="ui-tiled ui-border-t">
    <li data-href="index.html" class="ui-border-r"><div>基础样式</div></li>
    <li data-href="ui.html" class="ui-border-r"><div>UI组件</div></li>
    <li data-href="js.html"><div>JS插件</div></li>
  </ul>
</footer>
<section class="ui-container">
  <section id="tab">
    <div class="demo-item">
      <div class="demo-block">
        <div class="ui-tab">
          <ul class="ui-tab-nav ui-border-b">
            <li class="current">今日任务</li>
            <li>全部表情</li>
            <li>表情</li>
          </ul>
          <ul class="ui-tab-content" style="width:300%">
            <li>
              <div class="ui-whitespace"><%= render 'index_current_task' %></div>
            </li>
            <li>内容2</li>
            <li>内容3</li>
          </ul>
        </div>
      </div>
      <script class="demo-script">
      </script>
    </div>
  </section>
</section>
<script>
(function (){
  var tab = new fz.Scroll('.ui-tab', {
    role: 'tab',
    autoplay: true,
    interval: 3000
  });
  /* 滑动开始前 */
  tab.on('beforeScrollStart', function(fromIndex, toIndex) {
        console.log(fromIndex,toIndex);// from 为当前页，to 为下一页
      })
})();
</script>
